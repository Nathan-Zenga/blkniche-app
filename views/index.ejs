			</div>
		</div>
	</section>

	<!-- MUSIC section -->
	<section class="music">

		<!-- BS Carousel for music cover images -->
		<div class="column col-sm-6 carousel slide img-container" id="music-carousel">

			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li id="cover0" data-target="#music-carousel" data-slide-to="0" class="active"></li>
				<li id="cover1" data-target="#music-carousel" data-slide-to="1"></li>
				<li id="cover2" data-target="#music-carousel" data-slide-to="2"></li>
				<li id="cover3" data-target="#music-carousel" data-slide-to="3"></li>
			</ol>

			<!-- Container for slides -->
			<div class="carousel-inner">
				<div class="item active">
					<div class="img" style="background-image:url('/img/music-cover/cover2.jpg')"></div>
					<div class="carousel-caption">
						<h3 class="carousel-caption-title">Up To No Good</h3>
						<p class="carousel-caption-artist">AB</p>
					</div>
				</div>

				<div class="item">
					<div class="img" style="background-image:url('/img/music-cover/cover1.jpg')"></div>
					<div class="carousel-caption">
						<h3 class="carousel-caption-title">Story Mode</h3>
						<p class="carousel-caption-artist">Sorom</p>
					</div>
				</div>

				<div class="item">
					<div class="img" style="background-image:url('/img/music-cover/cover3.jpg')"></div>
					<div class="carousel-caption">
						<h3 class="carousel-caption-title">Experimental EP</h3>
						<p class="carousel-caption-artist">Dede</p>
					</div>
				</div>

				<div class="item">
					<div class="img" style="background-image:url('/img/music-cover/cover4.jpg')"></div>
					<div class="carousel-caption">
						<h3 class="carousel-caption-title">Faded</h3>
						<p class="carousel-caption-artist">Micah Starz</p>
					</div>
				</div>
			</div>

			<!-- Left + right arrow controls -->
			<a class="left carousel-control" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
				<span class="sr-only">Next</span>
			</a>

		</div>

		<div class="column col-sm-6 text-container">
			<div class="textbox">
				<div class="textbody">
					<!-- follow two element text is extracted from carousel caption in JS -->
					<h1 class="slide-title music-title"></h1>
					<h2 class="slide-artist music-artist"></h2><br>
				</div>
			</div>
		</div>

	</section>

	<!-- VIDEOS section -->
	<section class="videos">
		<!-- BS Carousel for music cover images -->
		<div class="column col-sm-6 col-sm-push-6 carousel slide img-container" id="videos-carousel">

			<!-- Indicators -->
			<ol class="carousel-indicators"></ol>

			<!-- Container for slides -->
			<div class="carousel-inner"></div>

			<!-- Left + right arrow controls -->
			<a class="left carousel-control" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="right carousel-control" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
				<span class="sr-only">Next</span>
			</a>

		</div>

		<div class="column col-sm-6 col-sm-pull-6 text-container">
			<div class="textbox">
				<div class="textbody">
					<div class="video-controls">
						<button class="back-button btn"><i class="symbol fa fa-backward"></i></button>&emsp;
						<button class="playback-button btn"><i class="symbol fa fa-play"></i></button>&emsp;
						<button class="forward-button btn"><i class="symbol fa fa-forward"></i></button>&emsp;
						<button class="mute-button btn"><i class="symbol fa fa-volume-off"></i></button>
					</div>
					<h1 class="slide-title video-title"></h1>
					<h2 class="slide-artist video-artist"></h2><br>
					<p class="slide-info video-info"></p>
				</div>
			</div>
		</div>
	</section>

