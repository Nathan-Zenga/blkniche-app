<div id="edit_blogpost" class="modal" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<p class="modal-title" data-dismiss="modal"><img src="/img/logo/logo 3.png"></p>
			</div>

			<div class="modal-body">
				<form class="form-group" method="post" action="/blog/post/update/">
					<fieldset>
						<legend>EDIT POST</legend>

						<div class="result"></div>

						<label class="sr-only">Edit Title</label>
						<input class="form-control details" type="text" name="title" placeholder="Edit Title">

						<label class="sr-only">Edit text</label>
						<textarea class="form-control details" name="textbody" placeholder="Edit text"></textarea>

						<label class="sr-only">Save & Post</label>
						<input class="form-control submit" type="submit" value="Save & Post">
					</fieldset>
				</form>
			</div>

		</div>
	</div>
</div>
