<!-- Update form -->
<div id="update_form" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<p class="modal-title" data-dismiss="modal"><img src="/img/logo/logo 3.png"></p>
			</div>

			<div class="modal-body">
				<!-- FORM -->
				<form class="form-group">
					<fieldset>
						<legend>UPDATE DETAILS</legend>

						<p style="font-style: italic;">Leave any fields blank to leave details unchanged.</p>
						<div class="result"></div>

						<label class="sr-only">First Name</label>
						<input class="form-control details name" type="text" name="firstName_update" placeholder="First name" style>

						<label class="sr-only">Last Name</label>
						<input class="form-control details name" type="text" name="lastName_update" placeholder="Last name" style>

						<label class="sr-only">Email Address</label>
						<input class="form-control details" type="email" name="email_update" placeholder="Email" style>

						<label class="sr-only">Username</label>
						<input class="form-control details" type="username" name="username_update" placeholder="Username" style>

						<div class="DOB-group">
							<label class="sr-only">Date of Birth</label>
							<input class="form-control details" type="text" id="DOB_update" name="DOB_update" placeholder="Date of birth" onfocus="(this.type='date')" onblur="(this.type='text')" style>
						</div>
						
						<label class="sr-only">Nationality</label>
						<select class="form-control details" name="nationality_update" style>
							<option value="">Nationality</option>
							<option value="United Kingdom">United Kingdom</option>
							<option value="United States of America">United States of America</option>
							<option value="South America">South America</option>
							<option value="Europe">Europe</option>
							<option value="Asia">Asia</option>
							<option value="Australia">Australia</option>
						</select>

						<label class="sr-only">Old Password</label>
						<input class="form-control details" type="password" name="old_password" placeholder="Old Password">

						<label class="sr-only">New Password</label>
						<input class="form-control details" type="password" name="new_password" placeholder="New Password">

						<label class="sr-only">SAVE</label>
						<input class="form-control submit" data-dismiss="modal" type="submit" value="Save">
					</fieldset>
				</form>
			</div>

			<div class="modal-footer"></div>

		</div>
	</div>
</div>
