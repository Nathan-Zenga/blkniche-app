<!-- Modal for sign-up form, for client data creation -->
<div id="login-form" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<p class="modal-title" data-dismiss="modal"><img src="/img/logo/logo 3.png"></p>
			</div>

			<div class="modal-body">
				<!-- FORM -->
				<form class="form-group" method="post" action="/users/profile">
					<fieldset>
						<legend>LOG IN</legend>

						<label class="sr-only">Username</label>
						<input class="form-control details" type="username" name="username" placeholder="Username" style>

						<label class="sr-only">Password</label>
						<input class="form-control details" type="password" name="password" placeholder="Password">

						<label class="sr-only">Log in</label>
						<input class="form-control submit" type="submit" value="Sign in">
					</fieldset>
				</form>
			</div>

			<div class="modal-footer">
				<p>Don't have an account? <a data-dismiss="modal" data-toggle="modal" data-target="#registration"><i>Sign up.</i></a></p>
			</div>

		</div>
	</div>
</div>
