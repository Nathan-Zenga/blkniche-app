<!DOCTYPE html>
<html class="<%= pageClass %> page" lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title><%= title %> /// BLK.NICHÃˆ</title>
	<link rel="stylesheet" type="text/css" href="/css/maincss.css">
	<link rel="stylesheet" type="text/css" href="/css/logo-cube.css">
	<script src="/js/libs/jquery.min.js"></script>
	<script src="/js/libs/bootstrap.min.js"></script>
	<script src="/js/Detect.js/detect.min.js"></script>
	<script src="/js/Detect.js/bDetect.js"></script>
	<script src="/js/mainjs.min.js"></script>
	<%_ if(errors) { _%>
	<script> $(() => { $("#sign-up").click() }) </script>
	<%_ } if(pageClass == "profile") { _%>
	<script>
		$(() => {
			$(".uploadDp").click(function() {
				$("#uploadDp_form").slideDown();
			});
		})
	</script>
	<%_ } if(user) { _%>
	<style>
		nav .link {
			height: 20%;
		}

		.dp-container {
			position: absolute;
			top: 70px;
			right: 25px;
			background-color: white;
			width: 100px;
			height: 100px;
			border: 5px solid white;
			border-radius: 300px;
			overflow: hidden;
		}

		.profile-info {
			left: 0px;
			width: 100%;
			padding: 20px 40px;
			background-color: rgba(0, 0, 0, .5);
			color: white;
		}

		@media (max-width: 768px) {
			.profile-info a {
				display: block;
			}
		}

		@media (min-width: 768px) {
			nav .link {
				width: 20%;
				height: 100%;
			}

			.dp-container {
				width: 300px;
				height: 300px;
			}
		}
	</style>
	<%_ } _%>
</head>

<body>

<header>
	<div class="inner-header">
		<a><div class="col-xs-6" id="header-logo">
			<img src="/img/logo/logo 3.png"><p>Music Group</p>
		</div></a>
		
		<nav class="col-xs-6">
			<a><div id="menu"><p>Menu</p></div></a>
			<div class="link-group">
				<a><div class="col-sm-3 link" id="music"><p>Music</p></div></a>
				<a><div class="col-sm-3 link" id="videos"><p>Videos</p></div></a>
				<a><div class="col-sm-3 link" id="info"><p>Info</p></div></a>
				<%_ if (user) { _%>
				<a href="/profile"><div class="col-sm-3 link" id="profile"><p><i class="fa fa-user-circle-o"></i></p></div></a>
				<a href="/users/logout"><div class="col-sm-3 link" id="logout"><p>Logout</p></div></a>
				<%_ } else { _%>
				<a><div class="col-sm-3 link" id="sign-up" data-toggle="modal" data-target="#registration"><p>Sign Up</p></div></a>
				<%_ } _%>
			</div>
		</nav>
	</div>
</header>

<div id="toTop"><p><span class="glyphicon glyphicon-chevron-up"></span></p></div>


<!-- including the modals -->
<%_ if (user) { _%>
<% include modals/update %>

<%_ } else { _%>
<% include modals/register %>
<%_ } _%>


<div class="row" style="position: fixed; top: 50px; right: 20px; margin: 0; z-index: 1000">
	<%_ if (success_msg != '') { _%>
		<div class="alert alert-success"><%= success_msg %></div>
	<%_ } _%>

	<%_ if (error_msg != '') { _%>
		<div class="alert alert-danger"><%= error_msg %></div>
	<%_ } _%>

	<%_ if (error != '') { _%>
		<div class="alert alert-danger"><%= error %></div>
	<%_ } _%>
</div>




<!-- Main inner body of webpage -->
<div class="container-fluid">