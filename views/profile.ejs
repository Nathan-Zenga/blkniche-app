<%_ include partials/header _%>

	<section style="padding: 100px 0">

			<%_ if (user) { _%>
				<ul class="profile-info">
					<li>Name: <%= user.firstName + " " + user.lastName %></li>
					<li>Email: <%= user.email %></li>
					<li>Date of birth: <%= user.DOB.getDate() + "/" + (user.DOB.getMonth()+1) + "/" + user.DOB.getFullYear() %></li>
					<li>Nationality: <%= user.nationality %></li><br>
					<a class="btn btn-default updateCustomer" data-id="<%= user._id %>" role="button" data-toggle="modal" data-target="#update-form">UPDATE</a> 
					<a class="btn btn-danger deleteCustomer" data-id="<%= user._id %>">DELETE ACCOUNT</a>
					<br><br>
					<a class="btn btn-default uploadDp">CHANGE PROFILE PHOTO</a>
					<%_ if( dp_src !== undefined ) { _%>
					<%_ if( !dp_src.filename.includes("default") ) { _%>
						<a class="btn btn-danger removeDp" href="/profile/u/remove/dp/<%= dp_src._id %>">DELETE PROFILE PHOTO</a>
					<%_ } _%>
					<%_ } _%>
					<form id="uploadDp_form" style="display: none" action="/profile/u/upload/dp" method="POST" enctype="multipart/form-data">
						<input type="file" name="dp">
						<input type="submit">
					</form>
				</ul>
				<%_ var imgSrc = !dp_src ? "/img/default.png" : "/profile/u/" + dp_src.filename _%>
				<div class="dp-container"><img style="width: 100%; height:100%" src="<%= imgSrc %>"></div>
			<%_ } _%>

		<div style="margin-top: 100px; width: 100%; padding: 20px; background-color: rgba(0, 0, 0, .5);">
			<form method="post" action="/mail/send">
				<input type="text" name="name" placeholder="Name"><br><br>
				<input type="email" name="email" placeholder="Email"><br><br>
				<input type="text" name="subject" placeholder="Subject"><br><br>
				<textarea name="message" placeholder="Message"></textarea><br><br>
				<input type="submit" name="submit" value="Send message">
			</form>
		</div>

	</section>

<%_ include partials/footer _%>