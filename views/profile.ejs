<%_ include partials/header _%>

	<section>
		<div id="bgreel">
			<div style="background-image: url('/img/bgreel/IMG_0576.JPG');"></div>
			<div style="background-image: url('/img/bgreel/IMG_0650.JPG');"></div>
			<div style="background-image: url('/img/bgreel/IMG_0670.JPG');"></div>
			<div style="background-image: url('/img/bgreel/IMG_0688.JPG');"></div>
			<div style="background-image: url('/img/bgreel/IMG_0750.JPG');"></div>
			<div style="background-image: url('/img/bgreel/IMG_0485.JPG');"></div>
			<div style="background-image: url('/img/bgreel/IMG_0506.JPG');"></div>
			<div style="background-image: url('/img/bgreel/IMG_0550.JPG');"></div>
			<div style="background-image: url('/img/bgreel/IMG_0785.JPG');"></div>
			<div style="background-image: url('/img/bgreel/IMG_0786.JPG');"></div>
			<div style="background-image: url('/img/bgreel/IMG_0792.JPG');"></div>
		</div>

		<%_ if (customers.length) { _%>
			<ul class="customerList" style="position: absolute; top: 100px; left: 0px; width: 100%; padding-top: 20px; padding-bottom: 20px; background-color: rgba(0, 0, 0, .5); color: white">
				<%_ if (user) { _%>
					<li>Name: <%= user.firstName %> <%= user.lastName %></li>
					<li>Email: <%= user.email %></li>
					<li>Date of birth: <%= user.DOB.getDate() + "/" + user.DOB.getMonth() + "/" + user.DOB.getFullYear() %></li>
					<li>Nationality: <%= user.nationality %></li>
				<%_ } else { _%>
					<%_ customers.forEach(function(doc){ _%>
						<li>
							<span class="username"><%= doc.username %></span> (<%= doc.email %>) - 
							<a class="deleteCustomer" data-id="<%= doc._id %>">DELETE</a> / 
							<a class="updateCustomer" data-id="<%= doc._id %>" data-toggle="modal" data-target="#update-form">UPDATE</a> 
						</li>
					<%_ }) _%>
				<%_ } _%>
			</ul>
		<%_ } _%>

		<div style="position: absolute; top: 250px; width: 100%; padding: 20px; background-color: rgba(0, 0, 0, .5);">

			<form method="post" action="/mail/send">
				<input type="text" name="name" placeholder="Name"><br><br>
				<input type="email" name="email" placeholder="Email"><br><br>
				<input type="text" name="subject" placeholder="Subject"><br><br>
				<textarea name="message" placeholder="Message"></textarea><br><br>
				<input type="submit" name="submit" value="Send message">
			</form>

		</div>



	</section>

<%_ include partials/footer _%>